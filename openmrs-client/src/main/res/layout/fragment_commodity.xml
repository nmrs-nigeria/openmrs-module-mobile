<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dashboard_background"
    android:paddingTop="10dp">

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1">

        <TableRow>
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/margin_short"
                android:layout_weight="1">

                <RelativeLayout
                    android:id="@+id/consumptionView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:id="@+id/consumptionButton"
                        android:layout_width="@dimen/dashboard_icon_height_width1"
                        android:layout_height="@dimen/dashboard_icon_height_width1"
                        android:layout_alignParentTop="true"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="@dimen/dashboard_icon_margin"
                        android:layout_marginTop="@dimen/dashboard_text_bottom_margin1"
                        android:layout_marginEnd="@dimen/dashboard_icon_margin"
                        android:layout_marginBottom="@dimen/dashboard_icon_margin"
                        android:contentDescription="@string/consumption_label" />

                    <TextView
                        android:id="@+id/consumptionLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/consumptionButton"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dashboard_text_top_margin"
                        android:layout_marginBottom="@dimen/dashboard_text_bottom_margin1"
                        android:text="@string/consumption_label"
                        android:textColor="#5758DA"
                        android:textSize="@dimen/dashboard_text_size" />
                </RelativeLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/margin_short"
                android:layout_weight="1">

                <RelativeLayout
                    android:id="@+id/receiptView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:id="@+id/receiptButton"
                        android:layout_width="@dimen/dashboard_icon_height_width1"
                        android:layout_height="@dimen/dashboard_icon_height_width1"
                        android:layout_alignParentTop="true"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="@dimen/dashboard_icon_margin"
                        android:layout_marginTop="@dimen/dashboard_text_bottom_margin1"
                        android:layout_marginEnd="@dimen/dashboard_icon_margin"
                        android:layout_marginBottom="@dimen/dashboard_icon_margin"
                        android:contentDescription="@string/receipt_icon_label" />

                    <TextView
                        android:id="@+id/receiptLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/receiptButton"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dashboard_text_top_margin"
                        android:layout_marginBottom="@dimen/dashboard_text_bottom_margin1"
                        android:text="@string/receipt_icon_label"
                        android:textColor="#53218C"
                        android:textSize="@dimen/dashboard_text_size" />
                </RelativeLayout>

            </androidx.cardview.widget.CardView>
        </TableRow>

        <TableRow>
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/margin_short"
                android:layout_weight="1">

                <RelativeLayout
                    android:id="@+id/distributionView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:id="@+id/distributionButton"
                        android:layout_width="@dimen/dashboard_icon_height_width1"
                        android:layout_height="@dimen/dashboard_icon_height_width1"
                        android:layout_alignParentTop="true"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="@dimen/dashboard_icon_margin"
                        android:layout_marginTop="@dimen/dashboard_text_bottom_margin1"
                        android:layout_marginEnd="@dimen/dashboard_icon_margin"
                        android:layout_marginBottom="@dimen/dashboard_icon_margin"
                        android:contentDescription="@string/distribution_label" />

                    <TextView
                        android:id="@+id/distributionLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/distributionButton"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dashboard_text_top_margin"
                        android:layout_marginBottom="@dimen/dashboard_text_bottom_margin1"
                        android:text="@string/distribution_label"
                        android:textColor="#218C41"
                        android:textSize="@dimen/dashboard_text_size" />
                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/margin_short"
                android:layout_weight="1">

                <RelativeLayout
                    android:id="@+id/transferView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:id="@+id/transferButton"
                        android:layout_width="@dimen/dashboard_icon_height_width1"
                        android:layout_height="@dimen/dashboard_icon_height_width1"
                        android:layout_alignParentTop="true"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="@dimen/dashboard_icon_margin"
                        android:layout_marginTop="@dimen/dashboard_text_bottom_margin1"
                        android:layout_marginEnd="@dimen/dashboard_icon_margin"
                        android:layout_marginBottom="@dimen/dashboard_icon_margin"
                        android:contentDescription="@string/transfer_commodity_label" />

                    <TextView
                        android:id="@+id/transferLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/transferButton"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dashboard_text_top_margin"
                        android:layout_marginBottom="@dimen/dashboard_text_bottom_margin1"
                        android:text="@string/transfer_commodity_label"
                        android:textColor="#4593E4"
                        android:textSize="@dimen/dashboard_text_size" />
                </RelativeLayout>

            </androidx.cardview.widget.CardView>


        </TableRow>

        <TableRow>
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/margin_short"
                android:layout_weight="1">

                <RelativeLayout
                    android:id="@+id/adjustmentView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:id="@+id/adjustmentButton"
                        android:layout_width="@dimen/dashboard_icon_height_width1"
                        android:layout_height="@dimen/dashboard_icon_height_width1"
                        android:layout_alignParentTop="true"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="@dimen/dashboard_icon_margin"
                        android:layout_marginTop="@dimen/dashboard_text_bottom_margin1"
                        android:layout_marginEnd="@dimen/dashboard_icon_margin"
                        android:layout_marginBottom="@dimen/dashboard_icon_margin"
                        android:contentDescription="@string/transfer_commodity_label" />

                    <TextView
                        android:id="@+id/adjustmentLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/adjustmentButton"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dashboard_text_top_margin"
                        android:layout_marginBottom="@dimen/dashboard_text_bottom_margin1"
                        android:text="@string/adjustment_commodity_label"
                        android:textColor="#BF53A7"
                        android:textSize="@dimen/dashboard_text_size" />
                </RelativeLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/margin_short"
                android:layout_weight="1">

                <RelativeLayout
                    android:id="@+id/syncCommodityView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:id="@+id/syncCommodityButton"
                        android:layout_width="@dimen/dashboard_icon_height_width1"
                        android:layout_height="@dimen/dashboard_icon_height_width1"
                        android:layout_alignParentTop="true"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="@dimen/dashboard_icon_margin"
                        android:layout_marginTop="@dimen/dashboard_text_bottom_margin1"
                        android:layout_marginEnd="@dimen/dashboard_icon_margin"
                        android:layout_marginBottom="@dimen/dashboard_icon_margin"
                        android:contentDescription="@string/find_commodity_label" />

                    <TextView
                        android:id="@+id/syncCommodityLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/syncCommodityButton"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dashboard_text_top_margin"
                        android:layout_marginBottom="@dimen/dashboard_text_bottom_margin1"
                        android:text="@string/sync_commodity_label"
                        android:textColor="#C27979"
                        android:textSize="@dimen/dashboard_text_size" />
                </RelativeLayout>

            </androidx.cardview.widget.CardView>



        </TableRow>

        <TableRow>
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/margin_short"
                android:layout_weight="1">

                <RelativeLayout
                    android:id="@+id/findCommodityView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:id="@+id/findCommodityButton"
                        android:layout_width="@dimen/dashboard_icon_height_width1"
                        android:layout_height="@dimen/dashboard_icon_height_width1"
                        android:layout_alignParentTop="true"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="@dimen/dashboard_icon_margin"
                        android:layout_marginTop="@dimen/dashboard_text_bottom_margin1"
                        android:layout_marginEnd="@dimen/dashboard_icon_margin"
                        android:layout_marginBottom="@dimen/dashboard_icon_margin"
                        android:contentDescription="@string/find_commodity_label" />

                    <TextView
                        android:id="@+id/findCommodityLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/findCommodityButton"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dashboard_text_top_margin"
                        android:layout_marginBottom="@dimen/dashboard_text_bottom_margin1"
                        android:text="@string/find_commodity_label"
                        android:textColor="#8C7A21"
                        android:textSize="@dimen/dashboard_text_size" />
                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/margin_short"
                android:layout_weight="1">

                <RelativeLayout
                    android:id="@+id/reportCommodityView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:id="@+id/reportCommodityButton"
                        android:layout_width="@dimen/dashboard_icon_height_width1"
                        android:layout_height="@dimen/dashboard_icon_height_width1"
                        android:layout_alignParentTop="true"
                        android:layout_centerInParent="true"
                        android:layout_marginStart="@dimen/dashboard_icon_margin"
                        android:layout_marginTop="@dimen/dashboard_text_bottom_margin1"
                        android:layout_marginEnd="@dimen/dashboard_icon_margin"
                        android:layout_marginBottom="@dimen/dashboard_icon_margin"
                        android:contentDescription="@string/transfer_commodity_label" />

                    <TextView
                        android:id="@+id/reportLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/reportCommodityButton"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/dashboard_text_top_margin"
                        android:layout_marginBottom="@dimen/dashboard_text_bottom_margin1"
                        android:text="@string/report_commodity_label"
                        android:textColor="#2AB2A2"
                        android:textSize="@dimen/dashboard_text_size" />
                </RelativeLayout>

            </androidx.cardview.widget.CardView>


        </TableRow>

    </TableLayout>

</ScrollView>