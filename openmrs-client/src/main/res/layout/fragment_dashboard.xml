<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dashboard_background"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">

                <pl.droidsonroids.gif.GifImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/gif2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <TableLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="1">

                    <TableRow>

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginStart="@dimen/margin_short1"
                            android:layout_marginEnd="@dimen/margin_short"
                            android:layout_marginBottom="@dimen/margin_short"
                            android:layout_weight="1"
                            app:cardCornerRadius='@dimen/dashboard_card_corner_radius'>

                            <RelativeLayout
                                android:id="@+id/findPatientView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="?android:attr/selectableItemBackground"
                                android:clickable="true"
                                android:focusable="true">

                                <ImageView
                                    android:id="@+id/findPatientButton"
                                    android:layout_width="@dimen/dashboard_icon_height_width1"
                                    android:layout_height="@dimen/dashboard_icon_height_width1"
                                    android:layout_alignParentTop="true"
                                    android:layout_centerInParent="true"
                                    android:layout_marginStart="@dimen/dashboard_icon_margin"
                                    android:layout_marginTop="@dimen/dashboard_icon_margin"
                                    android:layout_marginEnd="@dimen/dashboard_icon_margin"
                                    android:layout_marginBottom="@dimen/dashboard_icon_margin"
                                    android:contentDescription="@string/dashboard_search_icon_label" />

                                <TextView
                                    android:id="@+id/findPatientLabel"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/findPatientButton"
                                    android:layout_centerHorizontal="true"
                                    android:layout_gravity="center"
                                    android:layout_marginBottom="@dimen/dashboard_text_bottom_margin"
                                    android:fontFamily="@font/roboto_bold"
                                    android:text="@string/dashboard_search_icon_label"
                                    android:textColor="#5758DA"
                                    android:textSize="@dimen/dashboard_text_size" />
                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginEnd="@dimen/margin_short1"
                            android:layout_weight="1"
                            app:cardCornerRadius="@dimen/dashboard_card_corner_radius">

                            <RelativeLayout
                                android:id="@+id/registryPatientView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="?android:attr/selectableItemBackground"
                                android:clickable="true"
                                android:focusable="true">

                                <ImageView
                                    android:id="@+id/registryPatientButton"
                                    android:layout_width="@dimen/dashboard_icon_height_width1"
                                    android:layout_height="@dimen/dashboard_icon_height_width1"
                                    android:layout_alignParentTop="true"
                                    android:layout_centerInParent="true"
                                    android:layout_marginStart="@dimen/dashboard_icon_margin"
                                    android:layout_marginTop="@dimen/dashboard_icon_margin"
                                    android:layout_marginEnd="@dimen/dashboard_icon_margin"
                                    android:layout_marginBottom="@dimen/dashboard_icon_margin"
                                    android:contentDescription="@string/dashboard_registry_icon_label" />

                                <TextView
                                    android:id="@+id/registryLabel"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/registryPatientButton"
                                    android:layout_centerHorizontal="true"
                                    android:layout_gravity="center"

                                    android:layout_marginBottom="@dimen/dashboard_text_bottom_margin"
                                    android:fontFamily="@font/roboto_bold"
                                    android:text="@string/action_register_patient"
                                    android:textColor="#53218C"
                                    android:textSize="@dimen/dashboard_text_size" />
                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>
                    </TableRow>

                    <TableRow>

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginStart="@dimen/margin_short1"
                            android:layout_marginEnd="@dimen/margin_short"
                            android:layout_marginBottom="@dimen/margin_short"
                            android:layout_weight="1"
                            app:cardCornerRadius="@dimen/dashboard_card_corner_radius">

                            <RelativeLayout
                                android:id="@+id/activeVisitsView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="?android:attr/selectableItemBackground"
                                android:clickable="true"
                                android:focusable="true">

                                <ImageView
                                    android:id="@+id/activeVisitsButton"
                                    android:layout_width="@dimen/dashboard_icon_height_width1"
                                    android:layout_height="@dimen/dashboard_icon_height_width1"
                                    android:layout_alignParentTop="true"
                                    android:layout_centerInParent="true"
                                    android:layout_marginStart="@dimen/dashboard_icon_margin"
                                    android:layout_marginTop="@dimen/dashboard_icon_margin"
                                    android:layout_marginEnd="@dimen/dashboard_icon_margin"
                                    android:layout_marginBottom="@dimen/dashboard_icon_margin"
                                    android:contentDescription="@string/dashboard_visits_icon_label" />

                                <TextView
                                    android:id="@+id/activeVisitsLabel"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/activeVisitsButton"
                                    android:layout_centerHorizontal="true"
                                    android:layout_gravity="center"
                                    android:layout_marginBottom="@dimen/dashboard_text_bottom_margin"
                                    android:fontFamily="@font/roboto_bold"
                                    android:text="@string/dashboard_visits_icon_label"
                                    android:textColor="#218C41"
                                    android:textSize="@dimen/dashboard_text_size" />
                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginEnd="@dimen/margin_short1"
                            android:layout_weight="1"
                            app:cardCornerRadius="@dimen/dashboard_card_corner_radius">

                            <RelativeLayout
                                android:id="@+id/commodityView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="?android:attr/selectableItemBackground"
                                android:clickable="true"
                                android:focusable="true">

                                <ImageView
                                    android:id="@+id/commodityButton"
                                    android:layout_width="@dimen/dashboard_icon_height_width1"
                                    android:layout_height="@dimen/dashboard_icon_height_width1"
                                    android:layout_alignParentTop="true"
                                    android:layout_centerInParent="true"
                                    android:layout_marginStart="@dimen/dashboard_icon_margin"
                                    android:layout_marginTop="@dimen/dashboard_icon_margin"
                                    android:layout_marginEnd="@dimen/dashboard_icon_margin"
                                    android:layout_marginBottom="@dimen/dashboard_icon_margin"
                                    android:contentDescription="@string/dashboard_Commodity_icon_label" />

                                <TextView
                                    android:id="@+id/commodityLabel"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/commodityButton"
                                    android:layout_centerHorizontal="true"
                                    android:layout_gravity="center"
                                    android:layout_marginBottom="@dimen/dashboard_text_bottom_margin"
                                    android:fontFamily="@font/roboto_bold"
                                    android:text="@string/dashboard_Commodity_icon_label"
                                    android:textColor="#4AA3FF"
                                    android:textSize="@dimen/dashboard_text_size" />
                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                    </TableRow>


                    <TableRow>

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="@dimen/margin_short1"
                            android:layout_weight="1"
                            app:cardCornerRadius="@dimen/dashboard_card_corner_radius">

                            <RelativeLayout

                                android:id="@+id/patientBiometricView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="?android:attr/selectableItemBackground"
                                android:clickable="true"
                                android:focusable="true">

                                <ImageView
                                    android:id="@+id/patientBiometricButton"
                                    android:layout_width="@dimen/dashboard_icon_height_width1"
                                    android:layout_height="@dimen/dashboard_icon_height_width1"
                                    android:layout_alignParentTop="true"
                                    android:layout_centerInParent="true"
                                    android:layout_marginStart="@dimen/dashboard_icon_margin"
                                    android:layout_marginTop="@dimen/dashboard_icon_margin"
                                    android:layout_marginEnd="@dimen/dashboard_icon_margin"
                                    android:layout_marginBottom="@dimen/dashboard_icon_margin"
                                    android:contentDescription="@string/dashboard_visits_icon_label" />

                                <TextView
                                    android:id="@+id/patientBiometricLabel"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/patientBiometricButton"
                                    android:layout_centerHorizontal="true"
                                    android:layout_gravity="center"
                                    android:layout_marginBottom="@dimen/dashboard_text_bottom_margin"
                                    android:fontFamily="@font/roboto_bold"
                                    android:text="@string/patient_biometric_module"
                                    android:textColor="#BC49F1"
                                    android:textSize="@dimen/dashboard_text_size" />
                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="@dimen/margin_short"
                            android:layout_weight="1"
                            android:visibility="gone"
                            tools:visibility="gone">


                        </androidx.cardview.widget.CardView>

                    </TableRow>


                    <TableRow>

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="@dimen/margin_short"
                            android:layout_weight="1"
                            android:visibility="gone">

                            <RelativeLayout
                                android:id="@+id/dashboardProviderManagementView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="?android:attr/selectableItemBackground"
                                android:clickable="true"
                                android:focusable="true">

                                <ImageView
                                    android:id="@+id/dashboardProviderManagementButton"
                                    android:layout_width="@dimen/dashboard_icon_height_width"
                                    android:layout_height="@dimen/dashboard_icon_height_width"
                                    android:layout_alignParentTop="true"
                                    android:layout_centerInParent="true"
                                    android:layout_margin="@dimen/dashboard_icon_margin"
                                    android:src="@mipmap/ic_provider" />

                                <TextView
                                    android:id="@+id/dashboardProviderManagementLabel"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/dashboardProviderManagementButton"
                                    android:layout_centerHorizontal="true"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="@dimen/dashboard_text_top_margin"
                                    android:layout_marginBottom="@dimen/dashboard_text_bottom_margin"
                                    android:text="@string/action_provider_management"
                                    android:textSize="@dimen/dashboard_text_size" />
                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/roboto_black"
                            android:gravity="center"
                            android:text="@string/app_version"
                            android:textAlignment="center"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="@dimen/margin_short"
                            android:layout_weight="1"
                            android:visibility="gone">

                            <RelativeLayout
                                android:id="@+id/captureVitalsView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="?android:attr/selectableItemBackground"
                                android:clickable="true"
                                android:focusable="true">

                                <ImageView
                                    android:id="@+id/captureVitalsButton"
                                    android:layout_width="@dimen/dashboard_icon_height_width"
                                    android:layout_height="@dimen/dashboard_icon_height_width"
                                    android:layout_alignParentTop="true"
                                    android:layout_centerInParent="true"
                                    android:layout_marginStart="@dimen/dashboard_icon_margin"
                                    android:layout_marginTop="@dimen/dashboard_icon_margin"
                                    android:layout_marginEnd="@dimen/dashboard_icon_margin"
                                    android:layout_marginBottom="@dimen/dashboard_icon_margin"
                                    android:contentDescription="@string/dashboard_registry_icon_label"
                                    tools:visibility="gone" />

                                <TextView
                                    android:id="@+id/FormsLabel"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/captureVitalsButton"
                                    android:layout_centerHorizontal="true"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="@dimen/dashboard_text_top_margin"
                                    android:layout_marginBottom="@dimen/dashboard_text_bottom_margin"
                                    android:text="@string/dashboard_forms_icon_label"
                                    android:textSize="@dimen/dashboard_text_size" />
                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>


                    </TableRow>
                </TableLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>




</LinearLayout>